{
  "name": "pictos.net",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev": "npm run copy-schemas && vite",
    "build": "npm run copy-schemas && vite build",
    "preview": "vite preview",
    "validate-i18n": "node scripts/validateTranslations.cjs",
    "copy-schemas": "sh scripts/copy-submodule-data.sh",
